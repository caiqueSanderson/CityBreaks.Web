@page "{id:int}"
@model CityBreaks.Web.Pages.EditPropertyModel
@{
	ViewData["Title"] = "Editar Propriedade";
}

<h1>Editar Propriedade</h1>

<form method="post">
    <input type="hidden" asp-for="Property.Id" />

    <div>
        <label asp-for="Property.Name">Nome</label>
        <input asp-for="Property.Name" class="form-control" />
        <span asp-validation-for="Property.Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Property.PricePerNight">Preço por Noite</label>
        <input asp-for="Property.PricePerNight" class="form-control" />
        <span asp-validation-for="Property.PricePerNight" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Property.CityId">Cidade</label>
        <select asp-for="Property.CityId" asp-items="Model.CityOptions" class="form-control"></select>
        <span asp-validation-for="Property.CityId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Salvar Alterações</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}